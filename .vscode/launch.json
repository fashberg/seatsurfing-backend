{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome booking-ui",
            "port": 9222,
            "request": "launch",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/booking-ui",
            "url": "http://localhost:3001"
        },
        {
            "name": "Chrome admin-ui",
            "port": 9222,
            "request": "launch",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/admin-ui",
            "url": "http://localhost:3000"
        },
        {
            "name": "npm dev booking-ui",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceRoot}/booking-ui",
        },
        {
            "name": "npm dev admin-ui",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd": "${workspaceRoot}/admin-ui",
        },
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/server/",
            "envFile": "${workspaceFolder}/server/.env"
        },
        {
            "name": "Test Server",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/server/",
            "envFile": "${workspaceFolder}/server/.env",
            "showLog": true
        }
    ]
}